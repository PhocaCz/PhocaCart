        <field
            name="subscription_grace_period_days"
            type="number"
            label="COM_PHOCACART_FIELD_GRACE_PERIOD"
            description="COM_PHOCACART_FIELD_GRACE_PERIOD_DESC"
            default="0"
            min="0"
            max="365"
            filter="raw"
        />
