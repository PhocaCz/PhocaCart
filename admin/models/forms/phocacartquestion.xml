<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset addfieldpath="/administrator/components/com_phocacart/models/fields">

<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" required="true" readonly="true" class="readonly" />

<field name="product_id" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_PRODUCT_ID_LABEL" description="COM_PHOCACART_FIELD_PRODUCT_ID_DESC"  />

<field name="category_id" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_CATEGORY_ID_LABEL" description="COM_PHOCACART_FIELD_CATEGORY_ID_DESC"  />

<field name="user_id" type="user" class="form-control" size="40" label="COM_PHOCACART_FIELD_USER_ID_LABEL" description="COM_PHOCACART_FIELD_USER_ID_DESC"  />

<field name="name" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_NAME_LABEL" description="COM_PHOCACART_FIELD_NAME_DESC"  />

<field name="email" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_EMAIL_LABEL" description="COM_PHOCACART_FIELD_EMAIL_DESC"  />

<field name="phone" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_PHONE_LABEL" description="COM_PHOCACART_FIELD_PHONE_DESC"  />

<field name="phone_mobile" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_MOBILE_PHONE_LABEL" description="COM_PHOCACART_FIELD_MOBILE_PHONE_DESC"  />

<field name="ip" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_IP_LABEL" description="COM_PHOCACART_FIELD_IP_DESC"  />



<field name="message" type="textarea" class="form-control"  label="COM_PHOCACART_FIELD_MESSAGE_LABEL" description="COM_PHOCACART_FIELD_MESSAGE_DESC"   />

<field name="ordering" type="PhocacartOrdering" table="question" class="form-select" label="COM_PHOCACART_FIELD_ORDERING_LABEL" description="COM_PHOCACART_FIELD_ORDERING_DESC" />

	</fieldset>
	<fieldset name="publish" label="COM_PHOCACART_GROUP_LABEL_PUBLISHING_DETAILS" >

<field name="published" type="list" class="form-select" label="COM_PHOCACART_FIELD_PUBLISHED_LABEL" description="COM_PHOCACART_FIELD_PUBLISHED_DESC" size="1" default="1">
	<option value="1">JPUBLISHED</option>
	<option	value="0">JUNPUBLISHED</option>
</field>

<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="COM_PHOCACART_FIELD_LANGUAGE_DESC" >
	<option value="*">JALL</option>
</field>

<field name="date" type="Calendar" class="form-control" label="COM_PHOCACART_FIELD_DATE_LABEL" description="COM_PHOCACART_FIELD_DATE_DESC" filter="user_utc" translateformat="true" />

	</fieldset>


</form>
