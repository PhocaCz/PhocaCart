<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="batch">
        <fieldset name="basic" addfieldpath="/administrator/components/com_phocacart/models/fields">
            <field name="assetgroup_id" type="accesslevel" label="JLIB_HTML_BATCH_ACCESS_LABEL">
                <option value="">JLIB_HTML_BATCH_NOCHANGE</option>
            </field>

            <field name="language_id" type="contentlanguage" label="JLIB_HTML_BATCH_LANGUAGE_LABEL">
                <option value="">JLIB_HTML_BATCH_LANGUAGE_NOCHANGE</option>
            </field>

            <field name="copy_move" type="list" label="COM_PHOCACART_BATCH_COPY_MOVE">
                <option value="">COM_PHOCACART_BATCH_COPY_MOVE_NO</option>
                <option value="c">JLIB_HTML_BATCH_COPY</option>
                <option value="m">JLIB_HTML_BATCH_MOVE</option>
            </field>

            <field name="category_id" type="phocacartcategory" showon="copy_move:c[OR]copy_move:m" layout="joomla.form.field.list-fancy-select" label="JLIB_HTML_BATCH_MENU_LABEL">
                <option value="0">JLIB_HTML_ADD_TO_ROOT</option>
            </field>
        </fieldset>

        <fieldset name="copy">
            <field name="copy_all_cats" type="radio" default="0" showon="copy_move:c" layout="joomla.form.field.radio.switcher" label="COM_PHOCACART_COPY_ALL_CATEGORIES_FROM_SOURCE">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="skip_creating_unique_name" type="radio" default="0" showon="copy_move:c" layout="joomla.form.field.radio.switcher" label="COM_PHOCACART_SKIP_CREATING_UNIQUE_NAME">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="copy_download_files" type="radio" default="0" showon="copy_move:c" layout="joomla.form.field.radio.switcher" label="COM_PHOCACART_COPY_DOWNLOAD_FILES">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="copy_attributes_download_files" type="radio" default="0" showon="copy_move:c" layout="joomla.form.field.radio.switcher" label="COM_PHOCACART_COPY_ATTRIBUTE_OPTION_DOWNLOAD_FILES">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
        </fieldset>
    </fields>
</form>
