<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset addfieldpath="/administrator/components/com_phocacart/models/fields">

<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" required="true" readonly="true" class="readonly" />

<field name="title" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_TITLE_LABEL" description="COM_PHOCACART_FIELD_TITLE_DESC" required="true"  />

<field name="alias" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_ALIAS_LABEL" description="COM_PHOCACART_FIELD_ALIAS_DESC" />

<field name="code" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_PAYMENT_CODE_LABEL" description="COM_PHOCACART_FIELD_PAYMENT_CODE_DESC" />

<field name="method" type="phocaPluginMethod" plugintype="1" table="" class="form-control" label="COM_PHOCACART_FIELD_PAYMENT_METHOD_LABEL" description="COM_PHOCACART_FIELD_PAYMENT_METHOD_DESC" />

<field name="image" type="media" manager="categoryimage" label="COM_PHOCACART_FIELD_IMAGE_LABEL"  description="COM_PHOCACART_FIELD_IMAGE_DESC" class="form-control" size="40" />

<field name="ordering" type="phocacartOrdering" table="payment" class="form-select" label="COM_PHOCACART_FIELD_ORDERING_LABEL" description="COM_PHOCACART_FIELD_ORDERING_DESC" />

<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" class="form-control" size="1" />

<field name="group" type="PhocacartGroups" layout="joomla.form.field.list-fancy-select" multiple="true" table="8"  size="40" label="COM_PHOCACART_FIELD_CUSTOMER_GROUP_LABEL" description="COM_PHOCACART_FIELD_CUSTOMER_GROUP_DESC"  />

<field name="cost" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_COST_LABEL" description="COM_PHOCACART_FIELD_PAYMENT_COST_DESC" />
<field name="cost_additional" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_ADDITIONAL_COSTS_PAYMENT_METHOD_LABEL" description="COM_PHOCACART_FIELD_ADDITIONAL_COSTS_PAYMENT_METHOD_DESC" />

<field name="tax_id" type="phocatax" class="form-control" size="40" label="COM_PHOCACART_FIELD_TAX_LABEL" description="COM_PHOCACART_FIELD_TAX_DESC" />

<field name="calculation_type" type="list" class="form-select" label="COM_PHOCACART_FIELD_CALCULATION_TYPE_LABEL" description="COM_PHOCACART_FIELD_CALCULATION_TYPE_DESC" size="1" default="0">
	<option value="1">COM_PHOCACART_PERCENTAGE</option>
	<option	value="0">COM_PHOCACART_FIXED_AMOUNT</option>
</field>

<field name="type" type="list" class="form-select" label="COM_PHOCACART_FIELD_TYPE_LABEL" description="COM_PHOCACART_FIELD_TYPE_DESC" size="1" default="0">
	<option	value="0">COM_PHOCACART_COMMON</option>
	<option value="1">COM_PHOCACART_ONLINE_SHOP_ONLY</option>
	<option value="2">COM_PHOCACART_POS_ONLY</option>
</field>

<field name="default" type="list" class="form-select" label="COM_PHOCACART_FIELD_DEFAULT_LABEL" description="COM_PHOCACART_FIELD_DEFAULT_DESC" size="1" default="0">
	<option value="1">COM_PHOCACART_YES</option>
	<option	value="0">COM_PHOCACART_NO</option>
</field>

<!-- AMOUNT -->
<field name="lowest_amount" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_LOWEST_AMOUNT_LABEL" description="COM_PHOCACART_FIELD_LOWEST_AMOUNT_DESC" />
<field name="highest_amount" type="text" class="form-control" size="40" label="COM_PHOCACART_FIELD_HIGHEST_AMOUNT_LABEL" description="COM_PHOCACART_FIELD_HIGHEST_AMOUNT_DESC" />
<field name="active_amount" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="COM_PHOCACART_FIELD_ACTIVE_AMOUNT_LABEL" description="COM_PHOCACART_FIELD_ACTIVE_AMOUNT_DESC">
	<option value="0">COM_PHOCACART_NO</option>
    <option value="1">COM_PHOCACART_YES</option>
</field>

<!-- ZONE -->
<field name="zone" type="PhocacartZones" table="payment" multiple="true" label="COM_PHOCACART_FIELD_ZONES_LABEL" description="COM_PHOCACART_FIELD_ZONES_DESC" layout="joomla.form.field.list-fancy-select" size="1" />

<field name="active_zone" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="COM_PHOCACART_FIELD_ACTIVE_ZONE_LABEL" description="COM_PHOCACART_FIELD_ACTIVE_ZONE_DESC">
	<option value="0">COM_PHOCACART_NO</option>
    <option value="1">COM_PHOCACART_YES</option>
</field>

<!-- COUNTRY -->
<field name="country" type="PhocaCartCountries" table="payment" multiple="true" label="COM_PHOCACART_FIELD_COUNTRIES_LABEL" description="COM_PHOCACART_FIELD_COUNTRIES_DESC" layout="joomla.form.field.list-fancy-select" size="1" />

<field name="active_country" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="COM_PHOCACART_FIELD_ACTIVE_COUNTRY_LABEL" description="COM_PHOCACART_FIELD_ACTIVE_COUNTRY_DESC">
	<option value="0">COM_PHOCACART_NO</option>
    <option value="1">COM_PHOCACART_YES</option>
</field>

<!-- REGION -->
<field name="region" type="PhocacartRegions" table="payment" multiple="true" label="COM_PHOCACART_FIELD_REGIONS_LABEL" description="COM_PHOCACART_FIELD_REGIONS_DESC" layout="joomla.form.field.list-fancy-select" size="1" />

<field name="active_region" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="COM_PHOCACART_FIELD_ACTIVE_REGION_LABEL" description="COM_PHOCACART_FIELD_ACTIVE_REGION_DESC">
	<option value="0">COM_PHOCACART_NO</option>
    <option value="1">COM_PHOCACART_YES</option>
</field>

<!-- SHIPPING -->
<field name="shipping" type="PhocacartShipping" table="payment" multiple="true" label="COM_PHOCACART_FIELD_SHIPPING_LABEL" description="COM_PHOCACART_FIELD_SHIPPING_DESC" layout="joomla.form.field.list-fancy-select" size="1" />

<field name="active_shipping" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="COM_PHOCACART_FIELD_ACTIVE_SHIPPING_LABEL" description="COM_PHOCACART_FIELD_ACTIVE_SHIPPING_DESC">
	<option value="0">COM_PHOCACART_NO</option>
    <option value="1">COM_PHOCACART_YES</option>
</field>


<!-- CURRENCY -->
<field name="currency" type="PhocacartCurrencies" table="payment" multiple="true" label="COM_PHOCACART_FIELD_CURRENCY_LABEL" description="COM_PHOCACART_FIELD_CURRENCY_DESC" layout="joomla.form.field.list-fancy-select" />

<field name="active_currency" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="COM_PHOCACART_FIELD_ACTIVE_CURRENCY_LABEL" description="COM_PHOCACART_FIELD_ACTIVE_CURRENCY_DESC">
	<option value="0">COM_PHOCACART_NO</option>
    <option value="1">COM_PHOCACART_YES</option>
</field>

<field name="description" type="editor" buttons="true" hide="pagebreak,readmore" class="form-control" label="COM_PHOCACART_FIELD_DESCRIPTION_LABEL" filter="ComponentHelper::filterText" description="COM_PHOCACART_FIELD_DESCRIPTION_DESC" />
<field name="description_info" type="editor" buttons="true" hide="pagebreak,readmore" class="form-control" label="COM_PHOCACART_FIELD_PAYMENT_DESCRIPTION_INFO_VIEW_LABEL" filter="ComponentHelper::filterText" description="COM_PHOCACART_FIELD_PAYMENT_DESCRIPTION_INFO_VIEW_DESC" />

	</fieldset>


	<fieldset name="publish" label="COM_PHOCACART_GROUP_LABEL_PUBLISHING_DETAILS" >

<field name="published" type="list" class="form-select" label="COM_PHOCACART_FIELD_PUBLISHED_LABEL" description="COM_PHOCACART_FIELD_PUBLISHED_DESC" size="1" default="1">
	<option value="1">JPUBLISHED</option>
	<option	value="0">JUNPUBLISHED</option>
</field>





	</fieldset>


</form>
